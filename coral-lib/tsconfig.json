{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "src/app": ["../coral/src/app"],
      "src/domain": ["../coral/src/domain"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "noErrorTruncation": true
  },
  "include": ["components/**/*.ts", "components/**/*.tsx", "components/**/*.d.ts"],
  "references": [{ "path": "../coral" }]
}
