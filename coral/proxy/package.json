{
  "name": "coral-dev-proxy",
  "description": "Small proxy to run coral in development mode with a local Klaw instance.",
  "main": "proxy.js",
  "scripts": {
    "proxy": "pnpm exec nodemon server.js",
    "start-klaw-docker": "./start-docker.sh",
    "start-coral": "cd .. && pnpm vite --mode=local-api",
    "dev": "pnpm start-klaw-docker && npm-run-all -l -p proxy start-coral",
    "dev-with-test-env": "pnpm start-klaw-docker --testEnv && npm-run-all -l -p proxy start-coral",
    "dev-verbose": "VERBOSE=true pnpm dev",
    "dev-verbose-with-test-env": "VERBOSE=true pnpm dev-with-test-env"
  },
  "dependencies": {
    "http-proxy": "^1.18.1",
    "http-proxy-rules": "^1.1.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5"
  }
}
