{
  "name": "coral-dev-proxy",
  "description": "Small proxy to run coral in development mode with a local Klaw instance.",
  "main": "proxy.js",
  "scripts": {
    "proxy": "pnpm exec nodemon server.js",
    "start-coral": "cd .. && pnpm vite --mode=local-api",
    "dev": "./start-proxy-environment.sh",
    "dev:start": "./start-proxy-environment.sh --mode=start",
    "dev:restart": "./start-proxy-environment.sh --mode=restart",
    "dev:start:testEnv": "./start-proxy-environment.sh --mode=start --testEnv=true",
    "dev:restart:testEnv": "./start-proxy-environment.sh --mode=restart --testEnv=true"
  },
  "dependencies": {
    "http-proxy": "^1.18.1",
    "http-proxy-rules": "^1.1.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5"
  }
}
